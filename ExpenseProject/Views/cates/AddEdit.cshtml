@model ExpenseProject.Models.cate



<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>

<style>
body, input, label, span, button {
    font-family: 'Poppins', sans-serif; 
</style>

<!-- Floating Action Button -->
<div class="fab-container">
    <button class="fab" onclick="toggleMenu()">☰</button>
    <div class="fab-menu" id="fab-menu">
        <a href="/cates/Index" class="fab-item">Types</a>
        <a href="/cates/AddEdit" class="fab-item">Add/Edit</a>
        <a href="/cates/" class="fab-item">Reports</a>
    </div>
</div>

<style>
    .fab-container {
        position: fixed; /* Fixed position for the button */
        bottom: 30px; /* Distance from the bottom */
        right: 30px; /* Distance from the right */
    }

    .fab {
        background-color:aquamarine; /* Button color */
        color: white; /* Text color */
        border: none; /* No border */
        border-radius: 50%; /* Circular button */
        width: 56px; /* Button size */
        height: 56px; /* Button size */
        font-size: 24px; /* Font size */
        cursor: pointer; /* Pointer cursor */
        transition: background-color 0.3s; /* Transition for hover */
    }

        .fab:hover {
            background-color: #0056b3; /* Darker on hover */
        }

    .fab-menu {
        display: none; /* Hidden by default */
        flex-direction: column; /* Vertical layout */
        position: absolute; /* Position relative to the button */
        bottom: 70px; /* Position above the button */
        right: 0; /* Align to the right */
        background-color:darkslategray; /* Background for the menu */
        border-radius: 5px; /* Rounded corners */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Shadow for depth */
    }

    .fab-item {
        padding: 10px; /* Padding for items */
        text-decoration: none; /* Remove underline */
        color:antiquewhite; /* Text color */
    }

        .fab-item:hover {
            background-color:beige; /* Background on hover */
        }
</style>

<script>
    function toggleMenu() {
        var menu = document.getElementById("fab-menu");
        if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "flex"; // Show the menu
        } else {
            menu.style.display = "none"; // Hide the menu
        }
    }
</script>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" >
            <form asp-action="AddEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="cateId" value="@Model.cateId" />
                <div class="mb-3">
                    <div class='e-btn-group'>
                        <input type="radio" id="radioleft" name="Type" value="expense" @(Model.Type == "expense" ? "checked" : "") />
                        <label class="e-btn" for="radioleft">
                            <i class="fas fa-wallet"></i>
                            <span>Expense</span>
                        </label>

                        <input type="radio" id="radiomiddle" name="Type" value="income" @(Model.Type == "income" ? "checked" : "") />
                        <label class="e-btn" for="radiomiddle">
                            <i class="fas fa-money-bill-wave"></i>
                            <span>Income</span>
                        </label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <ejs-textbox id="firstname" placeholder="Title" ejs-for="Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox id="img" placeholder="icon" ejs-for="img" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="img" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-custom">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center w-100">
            <span class="custom-icon">
                <i class="fa-solid fa-business-time"></i>
            </span>
            <span>Manage Expenses</span>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
